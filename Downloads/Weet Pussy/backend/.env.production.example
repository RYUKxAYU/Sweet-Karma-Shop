# Sweet Shop API Production Environment Variables
# Copy this file to .env for production deployment

# Application Settings
APP_NAME=Sweet Shop API
DEBUG=false
ENVIRONMENT=production

# Database Configuration - Use PostgreSQL in production
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/sweetshop_prod

# JWT Security - MUST BE CHANGED!
JWT_SECRET_KEY=CHANGE-THIS-TO-A-VERY-LONG-RANDOM-STRING-IN-PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin Security
ADMIN_IP_WHITELIST=your.server.ip.address
ENABLE_IP_WHITELIST=true

# CORS Settings - Update with your domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=/var/www/sweetshop/uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# External API Keys
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/sweetshop/app.log